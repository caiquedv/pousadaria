<h2>Cadastrar Preço por Período</h2>

<% if @seasonal_rate.errors.any? %>
  <% @seasonal_rate.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>

<%= form_with(model: [@room, @seasonal_rate]) do |f| %>  

<div>
  <%= f.label :description %>
  <%= f.text_field :description %>
</div>  

<div>
  <%= f.label :start_date %>
  <%= f.date_field :start_date %>
</div>  

<div>
  <%= f.label :end_date %>
  <%= f.date_field :end_date %>
</div>  

<div>
  <%= f.label :daily_rate %>
  <%= f.number_field :daily_rate %>
</div>  

<div>
  <%= f.submit 'Salvar' %>
</div>

<% end %>