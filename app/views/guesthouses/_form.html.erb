<% if @guesthouse.errors.any? %>
  <% @guesthouse.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>

<%= form_with model: @guesthouse do |f| %>
<div>
  <%= f.label :brand_name %>
  <%= f.text_field :brand_name %>
</div>

<div>
  <%= f.label :corporate_name %>
  <%= f.text_field :corporate_name %>
</div>

<div>
  <%= f.label :tax_code %>
  <%= f.text_field :tax_code %>
</div>

<div>
  <%= f.label :phone %>
  <%= f.text_field :phone %>
</div>

<div>
  <%= f.label :email %>
  <%= f.text_field :email %>
</div>

<div>
  <%= f.label :address %>
  <%= f.text_field :address %>
</div>

<div>
  <%= f.label :district %>
  <%= f.text_field :district %>
</div>

<div>
  <%= f.label :state %>
  <%= f.text_field :state %>
</div>

<div>
  <%= f.label :city %>
  <%= f.text_field :city %>
</div>

<div>
  <%= f.label :postal_code %>
  <%= f.text_field :postal_code %>
</div>

<div>
  <%= f.label :description %> 
  <%= f.text_area :description %> 
</div>

<div>  
  <div>Formas de Pagamento</div>
  <% @payment_methods.each do |method| %>
    <%= check_box_tag "guesthouse[payment_method_ids][]", method.id, @guesthouse.payment_methods.include?(method), id: "payment_method_#{method.id}" %>
    <%= label_tag "payment_method_#{method.id}", method.name %> <br>
  <% end %>
</div>  

<div>
  <%= f.label :accepts_pets %>
  <%= f.select :accepts_pets, [['Sim', true], ['Não', false]] %>
</div>

<div>
  <%= f.label :active %>
  <%= f.select :active, [['Sim', true], ['Não', false]] %>
</div>

<div>
  <%= f.label :usage_policy %>
  <%= f.text_area :usage_policy %>
</div>

<div>
  <%= f.label :check_in %>
  <%= f.time_field :check_in %>
</div>

<div>
  <%= f.label :check_out %>
  <%= f.time_field :check_out %>
</div>

<%= f.submit 'Salvar' %>

<% end %>